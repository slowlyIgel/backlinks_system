{% extends 'case_model.twig' %}
{% block style %}
.case_data ul{display:inline-block; width:20%;}
.case_data ul:first-child{display:inline-block; width:40%;}
.case_data ul input{width:100%;}
table tr td{padding:5px;text-align:center;}
{% endblock %}
{% block main_stage %}
<div class="case_data">
  {% for casedetail in casedata %}
  <ul>
    <li><input type="text" value="{{casedetail["case_name"]}}" disabled></li>
    <li><input type="text" value="{{casedetail["case_address"]}}" disabled></li>
    <li><input type="text" value="{{casedetail["case_gacode"]}}" disabled></li>
  </ul>
  <ul>
    <li>T</li>
    <li>D</li>
    <li>K</li>
  </ul>
  <ul>
    <li><button type="button">歷史紀錄</button></li>
    <li>
      <select name="industry">
      {% for each_industry in industry_tpye %}
      <option value="{{each_industry["auto_industryID"]}}">{{each_industry["industry_name"]}}</option>
      {% endfor %}
      </select>
    </li>
    <li>
      <select name="level">
        {% for each_level in level_tpye %}
        <option value="{{each_level["auto_levelID"]}}">{{each_level["level_name"]}}</option>
        {% endfor %}
      </select>
    </li>
  </ul>
  {% endfor %}
<div>
  <button type="button" style="float:right;">送出</button>
  <button type="button" onclick="startedit()" style="float:right;">開始修改</button>
</div>
</div>



<div class="backlink_history">
  <table>
    <tr>
      <th>日期(週)</th>
      <th>群組</th>
      <th>類型</th>
    </tr>
    {% for eachRecord in linkRecord %}
    <tr>
      <td>{{eachRecord["submit_time"]}}</td>
      <td>群組{{eachRecord["backlinkGroup_id"] + 1}}</td>
      <td>{{eachRecord["BacklinkType_name"]}}</td>
    </tr>
    {% endfor %}
  </table>
</div>
{% endblock %}
{% block script_stage %}
<script type="text/javascript">
  function startedit(){
    $("input").prop("disabled",false);
  }

</script>
{% endblock %}
