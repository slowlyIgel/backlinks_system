{% extends 'page_model.twig' %}
{% block style %}
section.side{float:none;width:100%;}
section.side ul li {display:inline-block;}
section.main{float:none;width:100%;}
table{ border-collapse:collapse;}
.different{color:red;}
td{border: 1px solid #000;}
td[name] {font-size:10px;}
{% endblock %}
{% block main_stage %}

<button type="button" onclick="start_tdkcheck()">開始全部檢查</button>
<table id="TDKtable" class="tablesorter">
  <thead>
    <tr>
      <td>客戶名稱</td>
      <td>產業</td>
      <td>GA碼</td>
      <td>GA碼比對</td>
      <td>網站存活</td>
      <td>T</td>
      <td>D</td>
      <td>K</td>
      <td>前次檢查時間</td>
      <td>

      </td>
    </tr>
  </thead>
  {% for eachcase in TDKdata %}
      <tr case_id="{{eachcase["auto_id"]}}" case_address="{{eachcase["case_address"]}}">
        <td rowspan="2">{{eachcase["case_name"]}}</td>
        <td rowspan="2">{{industry_tpyeName[ eachcase["case_industry"] ]}}</td>
        <td rowspan="2" name="gacode">{{eachcase["case_gacode"]}}</td>
        <td rowspan="2" name="gacode_check">{{eachcase["case_gacode_check"]}}</td>
        <td rowspan="2" name="status">{{eachcase["case_alive"]}}</td>
        <td name="title" {% if eachcase["t_different"] %}class="different"{% endif %}>{{eachcase["case_title"]}}</td>
        <td name="description" {% if eachcase["d_different"] %}class="different"{% endif %}>{{eachcase["case_description"]}}</td>
        <td name="keyword" {% if eachcase["k_different"] %}class="different"{% endif %}>{{eachcase["case_keyword"]}}</td>
        <td rowspan="2" name="check_time">{{eachcase["last_check_time"]}}</td>
        <td rowspan="2">
          <button type="button" class="tdk" onclick="findtdk(this)">比對tdk</button>
        </td>
      </tr>
      <tr>
        <td name="last_week_title">{{eachcase["last_week_title"]}}</td>
        <td name="last_week_description">{{eachcase["last_week_description"]}}</td>
        <td name="last_week_keyword">{{eachcase["last_week_keyword"]}}</td>
      </tr>
  {% endfor %}
</table>


{% endblock %}
{% block script_stage %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.27.8/js/jquery.tablesorter.js"></script>
<script type="text/javascript">
$(function(){
  $("#TDKtable").tablesorter();
});

function start_tdkcheck(){
  $("tr[case_id]").each(function(){
    $(this).find("button.tdk").trigger("click");
  });

}

function findtdk(field){
  var address = $(field).parents("tr[case_id]").attr("case_address");
  var id = $(field).parents("tr[case_id]").attr("case_id");
  var gacode = $(field).parents("tr[case_id]").children("td[name=gacode]").html();

  $.post("/ajax/checkTDK",{"caseAddress" : address, "caseID" : id, "gacode" : gacode},function(data){
    var json = $.parseJSON(data);
    var thiscase = $(field).parents("tr");
    thiscase.children("td[name=status]").html(json.case_alive);
    thiscase.children("td[name=title]").html(json.case_title);
    thiscase.children("td[name=description]").html(json.case_description);
    thiscase.children("td[name=keyword]").html(json.case_keyword);
    thiscase.children("td[name=gacode_check]").html(json.case_gacode_check);
    thiscase.children("td[name=check_time]").html(json.last_check_time);

    var lastweedTR = thiscase.next("tr");
    lastweedTR.children("td[name=last_week_title]").html(json.last_week_title);
    if (json.case_title != json.last_week_title) {
      thiscase.children("td[name=title]").css("color","red");
    }
    lastweedTR.children("td[name=last_week_description]").html(json.last_week_description);
    if (json.case_description != json.last_week_description) {
      thiscase.children("td[name=description]").css("color","red");
    }
    lastweedTR.children("td[name=last_week_keyword]").html(json.last_week_keyword);
    if (json.case_keyword != json.last_week_keyword) {
      thiscase.children("td[name=keyword]").css("color","red");
    }

    if($(field).is($("button.tdk:last"))){
      location.href = "/export/tdkexcel";
    }
  });

}

</script>
{% endblock %}
